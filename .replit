modules = ["nodejs-20", "typescript-language-server", "web"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Start Athena"

[[workflows.workflow]]
name = "Start Athena"
author = 42212850
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[[workflows.workflow]]
name = "Start Web Dashboard"
author = 42212850
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[deployment]
run = ["sh", "-c", "node server.js"]
deploymentTarget = "gce"
build = ["sh", "-c", "npm run start"]

[[ports]]
localPort = 5000
externalPort = 80
